{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "project_core_schema.json",
    "description": "This schema defines the structure of the IATI project location standard. It is used to validate the project location data provided by the project counterparts.",
    "properties": {
        "scheme_version": {
            "type": "string",
            "enum": [
                "1.0"
            ]
        },
    "f_id": {
            "description": "For new locations, this column is empty. For updates, your project counterpart will provide you with a list of unique field ID numbers in this file to ensure that updated location IDs match with the former ones.",
            "type": "string"
        },
        "donor_project_no": {
            "description": "Every project location in the IATI Project Location Standard must be assigned to its respective (IATI) donor project number, which is provided by the respective partner, donor or implementing agency.",
            "type": "string"
        },
         "project_acronym": {
            "description": "Please enter the acronym used for the name/title of the project to be visible on your map.",
            "type": "string"
        },
        "data_provider": {
            "description": "Legal entity that provided the data here (= legal authorship).",
            "type": "string"
        },
        "publishing_restrictions": {
            "description": "Indicates if this information is collected in fragile regions and should therefore be omitted from publicly available reports.",
            "enum": [
                "yes ",
                "no"
            ],
            "type": "string"
        },
        "date_of_data_collection": {
            "description": "Date of data collection or latest update. In case only the year is available please choose the 1st of January i.e. YYYY-01-01",
            "format": "date",
            "type": "string"
        },
        "related_community": {
            "description": "You may enter a village, hamlet, or neighborhood name that relates to this location. This can serve to manually add smaller community or administrative unit names not identified in existing global databases.",
            "type": "string"
        },
        "location_name": {
            "description": "Unique name of the project site and its (main) activity incl local MIS-/GIS-ID, if availabe. This will be used as reference for line and polygon data.",
            "type": "string"
        },
        "location_activity_status": {
            "description": "The activity status at the location according to the IATI standard.",
            "enum": [
                "NA",
                "Pipeline/identification",
                "Implementation",
                "Finalisation",
                "Closed",
                "Cancelled",
                "Suspended",
                "Other"
            ],
            "type": "string"
        },
        "activity_start_date": {
            "description": "Approximate planned or actual start date of activities on the ground.",
            "format": "date",
            "type": "string"
        },
        "activity_end_date": {
            "description": "Approximate planned or actual end date of implementation of activities on the ground.",
            "format": "date",
            "type": "string"
        },
        "activity_description": {
            "description": "A short description of the main project activity in this location.",
            "type": "string"
        },
        "location_type_theme": {
            "description": "location type preselection field",
            "type": "string",
            "enum": [
                "_Generic / Cross_Sectoral",
                "Agriculture / Rural_Development",
                "Aquaculture / Fishery",
                "Biodiversity_Conservation",
                "Education",
                "Energy",
