        "Geographic Exactness": {
            "Explanation": "Use [exact] if the exact coordinates are known + no security restrictions apply. Otherwise, use [approximate (security)] or [approx. (yet unknown)]. If the target area is an admin unit, use [approx. (admin unit)]."
            "enum": [
                "exact",
                "approximate (yet unknown)",
                "approximate (security)",
                "approximate (admin unit)"
            ],
            "Type": "Categorical"
        }, 
        "Latitude": {
            "Explanation": "Enter the Latitude (at least 5 digits!) measured with a GPS device (or centroid or admin unit polygon for approximate locations). Use WGS 84 as the Coordinate Reference System (EPSG:4326)."
            "Type": "Decimal"  
        }, 
        "Longitude": {
            "Explanation": "Enter the Longitude (at least 5 digits!) measured with a GPS device (or centroid or admin unit polygon for approximate locations). Use WGS 84 as the Coordinate Reference System (EPSG:4326)."
            "Type": "Decimal" 
        }
        
     },
    "Required": [
        "Field ID",
        "Template Version",
        "Donor Project No.",
        "Abbreviation of project name (project acronym)",
        "Data Provider (Institution Name)",
        "Publishing restrictions due to security reasons",
        "Date of data collection or latest update",
        "Related Community / Village / Neighborhood",
        "Location name",
        "Location Activity Status",
        "Planned or actual start date of activity at the location",
