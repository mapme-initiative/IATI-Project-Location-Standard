{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "project_core_schema.json",
    "description": "This schema defines the structure of the IATI project location standard. It is used to validate the project location data provided by the project counterparts.",
    "properties": {
        "Template Version": {
            "Type": "Decimal",
            "enum": [
                "3.0"
            ]
        },
        "Field ID": {
            "Explanation": "For new locations, this column will be empty. For updates,  KfW will provide you with the list of f_id numbers of this file to ensure that the updated field ids match with the former ones.",
            "Type": "Integer"
        },
        "Donor Project No.": {
            "Explanation": "Every project location must be assigned to its respective BMZ project number.",
            "Type": "Integer"
        },
         "Abbreviation of project name (project acronym)": {
            "Explanation": "Enter the acronym used for the name/title of the project (e.g. HREII) to be visible on your map. If the project has multiple phases, please add the number of the phase belonging to the before-stated KfW Project-No. ",
            "Type": "Text"
        },
        "Data Provider (Institution Name)": {
            "Explanation": "Legal Entity who owns the data provided here (= legal authorship).",
            "Type": "Text"
        },
        "Publishing restrictions due to security reasons": {
            "Explanation": "Indicates if the exact location is collected in fragile areas (e.g. of severe civil conflict or war) and should therefore be omitted from publicly available reports.",
            "enum": [
                "yes ",
                "no"
            ],
            "Type": "Categorical"
        },
        "Date of data collection or latest update": {
            "Explanation": "Date of data collection or latest update (if date of data collection is unknown). In case only the year is available please choose the 1st of january e.g. 2022-01-01.",
            "Type": "Date"
        },
        "Related Community / Village / Neighborhood": {
            "Explanation": "Enter a community, village, hamlet or neighbourhood name that relates to this location, this can serve for manually add smaller administrative unit names that are not in global databases.",
            "Type": "Text"
        },
        "Location Name": {
            "Explanation": "Unique name of the project site and its (main) activity incl local MIS-/GIS-ID, if availabe. This will be used as reference for line and polygon data.",
            "Type": "Text"
        },
        "Location Activity Status": {
            "Explanation": "The location activity status according to the IATI standard. If you are unaware of the current status please choose [NA].",
            "enum": [
                "NA",
                "Pipeline/identification",
                "Implementation",
                "Finalisation",
                "Closed",
                "Cancelled",
                "Suspended",
                "Other"
            ],
            "Type": "Categorical"
        },
        "Planned or actual start date of activity at the location": {
            "Explanation": "Aprox. planned or actual start date of implementation of activities on the ground. This can be e.g. the date when construction work is planned to begin. For no information enter 2100-01-01.",
            "Type": "Date"
        },
        "Planned or actual end date of activity at the location": {
            "Explanation": "Aprox. planned or actual end date of activities on the ground. This can be e.g. the date when the project is planned to cease implementation activities. For no information enter 2100-01-01.",
            "Type": "Date"
        },
        "Activity Description": {
            "Explanation": "A short description of the main project activity in this location, e.g., hydropower plant construction or construction of small irrigation systems.",
            "Type": "Text"
        },
        "Location Type Theme": {
            "Explanation": "Sectoral / cross-sectoral location type preselection field, see table sheets [Location Types] & KC Themes. If there is no fit,  select [_Generic/Crosssect.] here and then [other physical/immaterial] in the next column.",
            "Type": "Categorical",
            "enum": [
                "_Generic / Cross_Sectoral",
                "Agriculture / Rural_Development",
                "Aquaculture / Fishery",
                "Biodiversity_Conservation",
                "Education",
                "Energy",
                "Financial_Sector_Development",
                "Governance / Decentralization",
                "Health",
                "Mobility / Transport",
